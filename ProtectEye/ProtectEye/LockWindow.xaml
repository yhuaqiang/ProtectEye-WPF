        <Label x:Name="lblCountDown" Content="10:00" HorizontalContentAlignment="Center" Margin="295,120,293,400" VerticalContentAlignment="Center" Width="212" Height="79" Foreground="White"  FontSize="36"/>
        <TextBox x:Name="tbPassword"  FontSize="30" Height="60" TextWrapping="NoWrap"  VerticalContentAlignment="Center" Margin="240,244,235,296"/>
        <Button x:Name="btnUnlock" Content="解锁" IsDefault="True" HorizontalAlignment="Left" Margin="294,368,0,0" VerticalAlignment="Top" Width="185" Height="59" Click="btnUnlock_Click"/>

    </Grid>
